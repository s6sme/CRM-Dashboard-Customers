doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport" content="width=device-width, initial-scale=1.0")
    title Dashboard
    link(rel="stylesheet" href="style.css")
    script(src="index.js" defer)
  body
    .dashboard
      aside.sidebar
        .sidebar__logo
          span.logo__title Dashboard
          span.logo__version v.01

        ul.sidebar__menu
          li.sidebar__item
            a.sidebar__link(href="#")
              span.icon 🏠 Dashboard
          li.sidebar__item
            a.sidebar__link(href="#")
              span.icon 📦 Product
              span.icon_right → 
          li.sidebar__item.sidebar__item--active
            a.sidebar__link.sidebar__link--active(href="#")
              span.icon 👥 Customers
              span.icon_right → 
          li.sidebar__item
            a.sidebar__link(href="#")
              span.icon 💵 Income
              span.icon_right → 
          li.sidebar__item
            a.sidebar__link(href="#")
              span.icon 📢 Promote
              span.icon_right → 
          li.sidebar__item
            a.sidebar__link(href="#")
              span.icon ❓ Help
              span.icon_right → 

        .sidebar__profile
          img.profile__avatar(src="image.jpg", alt="Evano")
          div
            span.profile__name Evano
            br
            span.profile__role Project Manager

